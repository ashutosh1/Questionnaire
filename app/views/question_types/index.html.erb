<h2><%=t '.title', :default => "Question Types" %></h2>
<div class="questionTypeFormDiv">
  <%= render :partial => "form" %>
</div >
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Associated Questions</th>  
      <th>Actions</th>  
    </tr>
  </thead>
  <tbody>
    <% @question_types.each do |question_type| %>
      <tr>
        <td><%= link_to question_type.name, question_type_path(question_type), :remote => true %></td>
        <td><%= question_type.questions.size %></td>
        <td>
          <%= link_to "", question_type_path(question_type), method: :delete, data: {confirm: "Please confirm you want to delete #{question_type.name} ?"}, :class => "icon-remove" %>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>   