<%= form_for @question_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => "shared/errors", :locals => { :obj => @question_type } %>  
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %><span class="requiredField"><%= mark_required(@question_type, 'name') %></span>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>&nbsp;&nbsp;
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>    
<% end %>