<h2>Questions</h2>
<% if @questions.present? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Question</th>  
        <th>Level</th>
        <th>Type</th>
        <th>Category</th>
        <th>Added by</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td width="35%"><%= link_to question.question, question_path(question) %></td>
          <td><%= question.question_level.name %></td>
          <td><%= question.question_type.name %></td>
          <td width="20%"><%= question.categories.collect(&:name).join(', ') %></td>
          <td><%= question.user.name %></td>
          <td>
            <%= link_to "", edit_question_path(question), :class => "icon-edit" %>&nbsp;
            <%= link_to "", question_path(question), method: :delete, data: {confirm: "Question will be removed from all associated test sets, Please confirm if you still want to delete it."}, :class => "icon-remove" %>
          </td>
        </tr>
      <% end %>
    <tbody>
  </table>
<% else %>
  <strong>There are no questions</strong>
<% end %>