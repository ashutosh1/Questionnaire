<%= form_tag download_sets_test_set_path, method: :get, :class => 'form-horizontal'  do %>
  <div class="control-group">
    <%= label_tag "Number Of Sets", nil, :class => 'control-label' %>
    <div class="controls">
      <%= number_field_tag "num_of_sets", nil, :min => 1, :placeholder => "Number of sets" %>
      <%= submit_tag "Download", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>