<h2>New Test Set</h2>
<%= form_tag search_questions_path, :method => :get, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= label_tag :category, nil, :class => 'control-label' %>
    <div class="controls">
      <%= autocomplete_field_tag 'category', '', autocomplete_category_name_questions_path, 'data-delimiter' => ',' %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag :tags, nil, :class => 'control-label' %>
    <div class="controls">
      <%= autocomplete_field_tag 'tags', '', autocomplete_tag_name_questions_path, 'data-delimiter' => ',' %>
    </div>
  </div>

  
  <% show_question_type.each do |qt| %>
    <div class="control-group">
      <%= label_tag qt[0], nil, :class => 'control-label'  %>
      <div class="controls">
        <%= number_field_tag "query[#{qt[1]}][number_of_questions]", nil, :placeholder => "Number of questions", min: 0 %>
        <span>
          <%= check_box_tag "query[#{qt[1]}][random]", true %>
          <%= label_tag 'random', nil, :class => "test_set_check_box_label" %>
        </span>  
      </div>
    </div>  
    <% show_question_level.each do |ql| %>
      <div class="control-group">
        <%= label_tag ql[0], nil, :class => 'control-label' %>
        <div class="controls">
          <%= number_field_tag "query[#{qt[1]}][levels][#{ql[1]}][number_of_questions]", nil, :placeholder => "Number of questions", min: 0 %>
        </div>  
      </div>  
    <% end %>
    <div class="lightLine"></div>
  <% end %>

  <div class="form-actions">
    <%= submit_tag "Search Questions", :class => 'btn btn-primary' %>
  </div>  
<% end %>