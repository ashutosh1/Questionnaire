<h2>New Test Set</h2>
<%= form_for @test_set, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => "shared/errors", :locals => { :obj => @test_set } %>
  <div class="control-group">
    <%= f.label :test_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :instruction, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :instruction, :class => 'text_area' %>
    </div>
  </div>
  
  <% show_question_type.each do |qt| %>
    <div class="control-group">
      <%= label_tag qt[0], nil, :class => 'control-label'  %>
      <div class="controls">
        <%= text_field_tag "query[#{qt[1]}][number_of_questions]", nil, :placeholder => "Number of questions" %>
        <span>
          <%= check_box_tag "query[#{qt[1]}][random]", true %>
          <%= label_tag 'random', nil, :class => "test_set_check_box_label" %>
        </span>  
      </div>
    </div>  
    <% show_question_level.each do |ql| %>
      <div class="control-group">
        <%= label_tag ql[0], nil, :class => 'control-label' %>
        <div class="controls">
          <%= text_field_tag "query[#{qt[1]}][levels][#{ql[1]}][number_of_questions]", nil, :placeholder => "Number of questions" %>
          <%= autocomplete_field_tag "query[#{qt[1]}][levels][#{ql[1]}][tag]", '', autocomplete_tag_name_questions_path, :placeholder => "Tag" %>
        </div>  
      </div>  
    <% end %>
    <div class="lightLine"></div>
  <% end %>
  <div class="control-group">
    <%= label_tag "Number Of Sets", nil, :class => 'control-label' %>
    <div class="controls">
      <%= number_field_tag "num_of_sets", nil, :min => 1, :placeholder => "Number of sets" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>  
<% end %>