<%= nav_bar :fixed => :top, :brand => "Questionnaire", :responsive => true do %>
  <%= menu_group do %>
    <%= drop_down "Users" do %>
      <%= menu_item "Users", users_path, :class => class_name("users", "index") %>
      <%= menu_item "Deleted Users", users_path("deleted"), :class => class_name("users", "index", "deleted") %>
    <% end %>
    <%= menu_divider %>
    <%= drop_down "Test Sets" do %>
      <%= menu_item 'Test Sets', test_sets_path, :class => class_name("test_sets", "index") %>
      <%= menu_item "Create New Set", new_test_set_path, :class => class_name("test_sets", "new") %>
    <% end %>
    <%= menu_divider %>
    <%= menu_item 'Categories', categories_path %>
    <%= menu_divider %>
    <%= menu_item 'Question Types', question_types_path %>
    <%= menu_divider %>
    <%= menu_item 'Question Levels', question_levels_path %>
    <%= menu_divider %>
    <%= menu_item 'Add Question', new_question_path %>
    <%= menu_divider %>
    <%= drop_down "Questions" do %>
      <%= menu_item "All Questions", questions_path %>
      <strong>By Question Type</strong>
      <% QuestionType.all.each do |qt| %>
        <%= menu_item qt.name, question_type_questions_path(qt) %>
      <% end %>
      <strong>By Question Level</strong>
      <% QuestionLevel.all.each do |ql| %>
        <%= menu_item ql.name, question_level_questions_path(ql) %>
      <% end %>
    <% end %>
    <%= menu_divider %>
  <% end %>  
  <%= menu_group :pull => :right do %>
    <%= menu_item 'Sign Out', destroy_user_session_path %>
  <% end %>  
<% end %>