<% if flash[:alert] %>
  $('div.flashMessageDiv').html("<%= escape_javascript(bootstrap_flash)%>");
  $('#userEmailTextField').val('');
  $('#userEmailTextField').removeAttr("readonly");
  $('input[type="checkbox"]').each(function(){
    $(this).attr('checked', false);
  });
<% else %>
  $('div.userFormDiv').html("<%= escape_javascript(render :partial => 'form' )%>");
  $('div.flashMessageDiv').html("");
<% end %>
