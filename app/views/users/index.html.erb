<div>
  <% unless params[:type] %>
    <%= link_to "Deleted Users", users_path("deleted") %>
  <% else %>
    <%= link_to "Users", users_path %>
  <% end %>
</div>
<div class="userFormDiv">
  <%= render :partial => "form" %>
</div >
<div class="page-header">
  <h2>Users</h2>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>  
      <th>Email</th>
      <th>Actions</th>  
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if params[:type] %>
            <%= user.name || '-' %>
          <% else %>
            <%= link_to user.name, user_path(user), :remote => true %>
          <% end %>  
        </td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Destroy", user_path(user), method: :delete, data: {confirm: "are you sure"} unless user == current_user || params[:type] %>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>   